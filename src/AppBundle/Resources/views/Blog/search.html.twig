{% extends 'base.html.twig' %}

{% block title %}Search — {{ query }}{% endblock %}

{% block body %}

    {% for p in posts %}
        <h2>
            {{ p.title }} — {{ p.datetimeCreated|date("F jS Y") }}
        </h2>
        <p>{{ p.body }}</p>
    {% endfor %}

    <div class="navigation">
        {{ knp_pagination_render(posts) }}
    </div>


{% endblock %}