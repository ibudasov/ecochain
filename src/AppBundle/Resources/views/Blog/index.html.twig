{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}


    {% for p in posts %}
        <h2>
            {{ p.title }} — {{ p.datetimeCreated|date("F jS Y") }}
        </h2>
        <p>{{ p.body[:100] ~ '...' }}</p>


        <p><a class="btn btn-secondary" href="{{ path('front_post', {'id': p.id, '_format': 'html'}) }}" role="button">Read more »</a></p>
    {% endfor %}

    <div class="navigation">
        {{ knp_pagination_render(posts) }}
    </div>

{% endblock %}